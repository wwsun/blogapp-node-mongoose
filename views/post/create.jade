extends ../layout

block content
    - var action = post ? "/post/edit/" + post.id : "/post/create";
    - var title = post ? post.title : '';
    - var body = post ? post.body : '';
    form(method="post", action=action)
        ul
            li
                label(for="title") Title
                input#title(name="title", value=title)
            li
                label(for="body") Body
                textarea#body(name="body")= body
            li
                input(type="submit", value="Save")